{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Launch Editor",
			"dependsOn": ["_LaunchEditor"],
			"dependsOrder": "sequence",
			"group": {
                "kind": "build",
                "isDefault": true
            }
		},
		{
            "label": "---------------- INTERNAL TASKS ----------------",
            "type": "shell",
            "command": ""
        },
		{
			"label": "_LaunchEditor",
			"type": "shell",
			"windows":{
				"command": "./engine/Godot_v4.6-stable_win64.exe --editor ./project/project.godot",
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
	]
}